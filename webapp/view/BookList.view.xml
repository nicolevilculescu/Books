   <Table id="idBooksTable"
		items="{
			path: '/BooksSet',
			sorter: {
				path: 'Title'
			}
		}"
		growing="true"
		growingThreshold="10">
	
		<columns>
			<Column>
				<Text text="Title" />
			</Column>
			<Column>
				<Text text="Author" />
			</Column>
			<Column>
				<Text text="Published on" />
			</Column>
			<Column>
				<Text text="Language" />
			</Column>
         <Column>
				<Text text="Available books" />
			</Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Title}"
						text="{BookISBN}"/>
					<Text text="{Author}" />
					<Text text="{ 
							path: 'PublishingDate',
							type: 'sap.ui.model.type.Date'
               			}" 
					/>
					<Text text="{Language}" />
					<Text text="{= parseInt(${Available}) }" />
				</cells>
			</ColumnListItem>
		</items>
	</Table>
   
</mvc:View>