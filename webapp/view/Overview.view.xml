<mvc:View
		controllerName="org.ubb.books.controller.App"
		xmlns="sap.m"
		xmlns:mvc="sap.ui.core.mvc">
	<Page title="{i18n>homePageTitle}">
		<content>

			<VBox alignItems="Center" justifyContent="Center">
				<Button 
			    id="first" 
				text="{i18n>first}"
				press=".onFirstPress"
				class="sapUiSmallMarginEnd"/>

			<Button 
			    id="second" 
				text="{i18n>second}"
				press=".onSecondPress"
				class="sapUiSmallMarginEnd"/>
			</VBox>
						
		</content>
	</Page>
</mvc:View>