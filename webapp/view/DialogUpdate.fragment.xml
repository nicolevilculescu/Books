<core:FragmentDefinition
   xmlns="sap.m"
   xmlns:core="sap.ui.core"
   xmlns:l="sap.ui.layout" >
   <Dialog
      id="dialogUpdate"
      title="{i18n>updateBook}">

      <VBox alignItems="Center" justifyContent="Center">

            <l:VerticalLayout class="sapUiContentPadding" width="100%">

                <Label text="ISBN" labelFor="isbn" />
                <Input
                    id="isbn"
                    class="sapUiSmallMarginBottom"
                    width='100%' />

                <Label text="Title" labelFor="title" />
                <Input
                    id="title"
                    class="sapUiSmallMarginBottom"
                    width='100%' />

                <Label text="Author" labelFor="author" />
                <Input
                    id="author"
                    class="sapUiSmallMarginBottom"
                    width='100%' />

                <Label text="Publishing date" labelFor="date" />
                <DateTimePicker
                    id="date"
                    width='100%'
                    displayFormat="medium" />

                <Label text="Language" labelFor="language" />
                <Input
                    id="language"
                    class="sapUiSmallMarginBottom"
                    width='100%' />

                <Label text="Number of books" labelFor="total" />
                <Input
                    id="total"
                    class="sapUiSmallMarginBottom"
                    width='20%' />
            
            </l:VerticalLayout>

        </VBox>

        <beginButton>
            <Button text="{i18n>cancel}" press=".onCloseUpdate"/>
        </beginButton>
        <endButton>
            <Button text="{i18n>update}" press=".onUpdate"/>
        </endButton>

   </Dialog>
</core:FragmentDefinition>