<mvc:View
	controllerName="org.ubb.books.controller.BooksForCheckout"
   	xmlns:mvc="sap.ui.core.mvc"
	xmlns:core="sap.ui.core"
	xmlns="sap.m">

   <Table id="idBooksTable2"
		items="{
			path: '/BooksSet'
		}"
		growing="true"
		growingThreshold="10">
	
		<headerToolbar>
         <Toolbar>
            <Button text="Checked-out books" press="openChecked"></Button>
			<ToolbarSpacer/>
            <SearchField width="30%" search=".onFilterBooks"/>
         </Toolbar>
      </headerToolbar>

		<columns>
			<Column>
				<Text text="Title" />
			</Column>
			<Column>
				<Text text="Author" />
			</Column>
			<Column>
				<Text text="Published on" />
			</Column>
			<Column>
				<Text text="Language" />
			</Column>
         	<Column>
				<Text text="Available books" />
			</Column>
			<Column>
				<Text text="Total number of books" />
			</Column>
			<Column></Column>
		</columns>
		<items>
			<ColumnListItem>
				<cells>
					<ObjectIdentifier
						title="{Title}"
						text="{BookISBN}"/>
					<Text text="{Author}" />
					<Text text="{ 
							path: 'PublishingDate',
							type: 'sap.ui.model.type.DateTime',
							formatOptions: {
    							pattern: 'dd.MM.yyyy'
  							},
  							constraints: {
    							displayFormat: 'Date'
  							}
               			}" 
					/>
					<Text text="{Language}" />
					<Text text="{= parseInt(${Available}) }" />
					<Text text="{= parseInt(${TotalNumber}) }" />
					<HBox>
						<Button text="Checkout" press="handleCheckout"></Button>
					</HBox>
				</cells>
			</ColumnListItem>
		</items>
	</Table>
   
</mvc:View>